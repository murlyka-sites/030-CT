			}
		}
		
		&_contact {
			display none
			text-align center
			margin auto
			max-width 200px 
			
			@media (min-width $xs) {
				display block
			}
			
			@media (min-width $sm) {
				text-align right
			}
			
			@media (min-width $md) {
				display flex
				align-items center
				max-width none
				margin-left auto
			}
		}
		
		&_burger {
			margin-left auto
			
			@media (min-width $xs) {
				margin-left 0 
			}
			
			@media (min-width $sm) {
				display none
			}
		}
	}
	
	&__phone {
		display inline-block
		margin-bottom 5px
		
		@media (min-width $md) {
			margin-right 25px 
			margin-bottom 0
		}
	}
}

.section-main {
