.section-header {
	background white
	 
	&__container {
		display flex
		align-items center
		padding 12px 0
	}
	
	&__column {
		&_logo {
			
			
			@media (min-width $sm) {
				margin-right 15px
			}
			
			@media (min-width $md) {
