	}
}

.section-edge-mainstream {
	padding-bottom 110px
	background url(../images/bg-edge-mainstream.svg) center bottom no-repeat
	
	&__container {
		display flex
		padding 35px 0 0
		
		@supports (flex-wrap wrap) {
			display flex
			flex-wrap wrap
		}
	}
	
	&__card {
		display inline-block
		position relative
		width 100% 
		margin 0 0 40px
		
		@media (min-width $xs) {
			flex 0 0 (100% / 2)
			width (100% / 2)
		}
		
		@media (min-width 600px) {
			flex 0 0 (100% / 3)
			width (100% / 3)
		}
		
		@media (min-width $md) {
			width (100% / 6)
			flex 0 0 (100% / 6)
		}
		
		&::after {
			display none
			content ""
			position absolute
			top 45px 
			right -25px 
			width 51px
			height 8px 
			background url(../images/icons/edge-arrow-right.svg) center center / 100% 100%
		}
		
		@media (min-width $xs) {
			&:nth-child(odd)::after {
				display block
			}
		}
		
		@media (min-width 600px) {
			&:nth-child(odd)::after {
				display none
			}
			
			&:nth-child(3n-1)::after,
			&:nth-child(3n-2)::after {
				display block
			}
		}
		
		@media (min-width $md) {
			&:nth-child(3n-1)::after,
			&:nth-child(3n-2)::after {
				display none
			}
			
			&:nth-child(1n)::after {
				display block
			}
			
			&:last-child::after {
				display none
			}
		}
		
		// &:last-child::after {
		// 	display none
		// }
	}
}

