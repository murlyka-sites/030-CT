.page {
	color $color-shale
	font-family Roboto, sans-serif
}

.container-fluid {
	box-sizing border-box
	margin auto
	padding 0 13px 0 12px
	max-width 1200px

	clearfix()
}

.row {
	box-sizing border-box
	margin 0 -13px 0 -12px
}

.h1 {
	margin 0
	font-weight 400
	font-size 20px
	font-family "Open Sans", sans-serif
	line-height 1.5

	@media (min-width $sm) {
		font-size 32px
	}
}

.h2 {
	margin 0
	font-weight 600
	font-size 28px
	font-family "Open Sans", sans-serif
}

.p {
	margin 0 0 20px
	font-size 16px
	font-family Roboto, sans-serif
	line-height 1.4
}

.fw {
	&_500 {
		font-weight 500
	}
}

.clearfix {
	&::after,
	&::before{
		display table
		content " "
	}

	&::after {
		clear both
	}
}

.bg-gainsborough {
	background $color-gainsborough
}

.section-planning,
.section-divarication {
	overflow hidden
}

[v-cloak] {
	display none
}

.svg {
	fill currentColor
}
