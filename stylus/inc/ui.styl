.button {
	display inline-block
	cursor pointer
	text-align center
	line-height 25px
	box-sizing border-box
	max-width 100%
	text-transform uppercase
	text-decoration none
	font-family Roboto, 'sans-serif' 
	box-shadow 5px 10px 15px rgba(15, 63, 35, 0.2)
	
	&_theme {
		&_white {
			background white
			color $color-azure
			border 1px solid white
			
			&:hover {
				background darken(white, 10%)
				border-color darken(white, 10%)
			}
		}
		
		&_azure {
			background $color-azure
			color white			
			border 1px solid $color-azure
			
			&:hover {
				background darken($color-azure, 10%)
				border-color darken($color-azure, 10%)
			}
		}
		
		&_caribbean {
			background $color-caribbean
			color white			
			border 1px solid $color-caribbean
			
			&:hover {
				background darken($color-caribbean, 10%)
				border-color darken($color-caribbean, 10%)
			}
		}
		
		&_bordered-azure {
			background transparent
			color $color-azure	
			border 1px solid $color-azure
			
			&:hover {
				color white
				background darken($color-azure, 10%)
				border-color darken($color-azure, 10%)
			}
		}
		
		&_bordered-white {
			background transparent
			color white	
			border 1px solid white
			
			&:hover {
				color $color-azure
				background darken(white, 10%)
				border-color darken(white, 10%)
			}
		}
	}
	
	&_size {
		&_xs {
			min-height 30px
			min-width 175px
			padding 2px 10px 1px 
			border-radius 30px
			font-size 12px 
		}
		
		&_sm {
			min-height 35px
			min-width 200px
			font-size 12px 
			font-weight 600 
			border-radius 15px
			padding 5px 15px 3px
			font-family 'Open Sans', sans-serif
		}
		
		&_md {
			min-height 40px
			min-width 200px
			border-radius 30px
			font-size 14px
			padding 7px 15px 6px
		}
		
		&_lg {
			min-height 50px
			min-width 240px
			border-radius 35px
			padding 12px 15px 11px
			font-size 14px 
		}
	}
	
	&__arrow {
		margin-left 10px 
	}
}

.phone-number {
	text-decoration none
	font-family 'Open Sans', sans-serif
	font-size 21px 
	font-weight 700
	color $color-azure
}

.field {
	box-sizing border-box
	height 35px
	border none
	padding 10px 
	box-shadow 3px 5px 15px rgba(0, 0, 0, 0.1)
	border-radius 5px
	text-align center
	
	&_size {
		&_sm {
			font-size 35px 
		}
		&_md {
			height 40px
		}
	}
	
	&_bordered {
		border 1px solid #E2E2E2
	}
}

.form-group {
	display block
	margin-bottom 25px 
	text-align left
	
	&__label {
		display block
		margin-bottom 10px 
		font-size 15px 
		color $color-gray
	}
	
	&__field {
		display block
		width 100%
		padding 10px 25px
		text-align left
		color $color-gray
	}
}

.frame-order {
	box-sizing border-box
	width 275px
	padding 30px 40px
	border-radius 15px
	background white 
	
	&__title {
		margin-bottom 20px
		text-align center
		font-size 18px 
		line-height 1.4 
		color $color-shale
	}
	
	&__field {
		display block
		width 100%
		margin-bottom 15px 
	}
	
	&__button {
		margin-top 5px
	}
}

.swiper {
	&-container {
		margin-bottom 50px 
		border-radius 25px
		overflow hidden
		box-shadow 5px 10px 30px rgba(13, 40, 58, 0.15)
	}
	
	&-prev,
	&-next {
		position absolute
		top 50%
		margin-top -20px 
		z-index 5 
		box-shadow 3px 5px 15px rgba(0, 0, 0, 0.15)
		border none
		width 40px
		height 40px
		border-radius 50%
		background white 
	}
	
	&-prev {
		left -20px
	}
	
	&-next {
		right -20px
	}
	
	&-pagination {
		width 100%
		bottom -42px !important
	}
	
	&-pagination-bullet {
		width 15px 
		height 15px
		background white
		opacity 1
		margin 5px 
		border 1px solid transparent
		background-clip padding-box
		box-shadow inset 0px 1px 1px rgba(0, 0, 0, 0.15)
	}
	
	&-pagination-bullet-active,
	&-pagination-bullet:hover {
		background $color-azure 
		border 1px solid $color-azure
	}
}

.vue-slider-component.vue-slider-horizontal .vue-slider {
	height 20px !important
	
	&-dot {
		box-sizing border-box
		width 34px !important
		height 34px !important
		border 4px solid white
		top -7px  !important
		margin-left -7px 
		background linear-gradient(180deg, rgba(255, 255, 255, 0.33) 0%, rgba(255, 255, 255, 0) 100%) $color-azure
	}
	
	&-process {
		background linear-gradient(180deg, rgba(255, 255, 255, 0.33) 0%, rgba(255, 255, 255, 0) 100%) $color-azure
	}
	
	&-slider {
		
		
	}
	
	&-tooltip {
		width 120px
		padding 5px 
		background white
		border-color white
		box-shadow 3px 5px 15px rgba(0, 0, 0, 0.2) 
		border-radius 5px
		color #444
		font-family 'Roboto', sans-serif 
		font-size 12px 
		font-weight 500 
	}
}

.checkbox,
.radio {
	display flex
	align-items center
	margin 5px 0 
	

	&__field {
		margin-right 20px 
	}
	
	&__label {
		font-family 'Roboto', sans-serif 
		font-size 16px 
	}
}

input[type="checkbox"],
input[type="radio"] {
	position relative
	width 25px 
	height 25px
	border 1px solid #E2E2E2
	box-shadow 3px 5px 15px rgba(0, 0, 0, 0.1)
	margin-right 15px 
	appearance none
}

input[type="checkbox"]:checked::before,
input[type="radio"]:checked::before {
	content ""
	position absolute
	top 0
	left 0
	width 100%
	height 100%
}

input[type="radio"] {
	border-radius 50%
	overflow hidden
}

input[type="radio"]:checked::before {
	box-sizing border-box
	border 6px solid transparent
	border-radius 50%
	background linear-gradient(180deg, rgba(255, 255, 255, 0.33) 0%, rgba(255, 255, 255, 0) 100%) $color-azure padding-box
	border 1
}

input[type="checkbox"] {	
	border-radius 5px
}

input[type="checkbox"]:checked {
	&::before {
		background url(../images/icons/checkbox.svg) center center / 12px 8px no-repeat
	}
}

.menu-button {
	box-sizing border-box
	border none
	padding 8px
	cursor pointer
	transition 0.3s
	background $color-azure 
	border-radius 3px
}

.menu-button .bar:nth-of-type(1) {
	margin-top 0px
}
.menu-button .bar:nth-of-type(3) {
	margin-bottom 0px
}

.bar {
	position relative
	display block
	width 30px
	height 4px
	margin 5px auto
	background-color #fff
	border-radius 5px
	transition .3s
	
}

.menu-button:hover .bar:nth-of-type(1) {
	transform translateY(1px) rotate(-4.5deg)
}
.menu-button:hover .bar:nth-of-type(2) {
	opacity .9
}
.menu-button:hover .bar:nth-of-type(3) {
	transform translateY(-1px) rotate(4.5deg)
}

.cross .bar:nth-of-type(1) {
	transform translateY(10px) rotate(-45deg)
}
.cross .bar:nth-of-type(2) {
	opacity 0
}
.cross .bar:nth-of-type(3) {
	transform translateY(-10px) rotate(45deg)
}
.cross:hover .bar:nth-of-type(1) {
	transform translateY(9px) rotate(-40.5deg)
}
.cross:hover .bar:nth-of-type(2) {
	opacity .1
}
.cross:hover .bar:nth-of-type(3) {
	transform translateY(-9px) rotate(40.5deg)
}

.bar {
	transform-origin center center
}