.button {
	display inline-block
	box-sizing border-box
	max-width 100%
	box-shadow 5px 10px 15px rgba(15, 63, 35, .2)
	text-align center
	text-decoration none
	text-transform uppercase
	font-family Roboto, sans-serif
	line-height 25px
	cursor pointer

	&_theme {
		&_white {
			border 1px solid white
			background white
			color $color-azure

			&:hover {
				border-color darken(white, 10%)
				background darken(white, 10%)
			}
		}

		&_azure {
			border 1px solid $color-azure
			background $color-azure
			color white

			&:hover {
				border-color darken($color-azure, 10%)
				background darken($color-azure, 10%)
			}
		}

		&_caribbean {
			border 1px solid $color-caribbean
			background $color-caribbean
			color white

			&:hover {
				border-color darken($color-caribbean, 10%)
				background darken($color-caribbean, 10%)
			}
		}

		&_bordered-azure {
			border 1px solid $color-azure
			background transparent
			color $color-azure

			&:hover {
				border-color darken($color-azure, 10%)
				background darken($color-azure, 10%)
				color white
			}
		}

		&_bordered-white {
			border 1px solid white
			background transparent
			color white

			&:hover {
				border-color darken(white, 10%)
				background darken(white, 10%)
				color $color-azure
			}
		}
	}

	&_size {
		&_xs {
			padding 2px 10px 1px
			min-width 175px
			min-height 30px
			border-radius 30px
			font-size 12px
		}

		&_sm {
			padding 5px 15px 3px
			min-width 200px
			min-height 35px
			border-radius 15px
			font-weight 600
			font-size 12px
			font-family Open Sans, sans-serif
		}

		&_md {
			padding 7px 15px 6px
			min-width 200px
			min-height 40px
			border-radius 30px
			font-size 14px
		}

		&_lg {
			padding 12px 15px 11px
			min-width 240px
			min-height 50px
			border-radius 35px
			font-size 14px
		}
	}

	&__arrow {
		margin-left 10px
	}
}

.phone-number {
	color $color-azure
	text-decoration none
	font-weight 700
	font-size 21px
	font-family Open Sans, sans-serif
}

.field {
	box-sizing border-box
	padding 10px
	height 35px
	border none
	border-radius 5px
	box-shadow 3px 5px 15px rgba(0, 0, 0, .1)
	text-align center

	&_size {
		&_sm {
			font-size 35px
		}
		&_md {
			height 40px
		}
	}

	&_bordered {
		border 1px solid $color-gainsborough-3
	}
}

.form-group {
	display block
	margin-bottom 25px
	text-align left

	&__label {
		display block
		margin-bottom 10px
		color $color-gray
		font-size 15px
	}

	&__field {
		display block
		padding 10px 25px
		width 100%
		color $color-gray
		text-align left
	}
}

.frame-order {
	box-sizing border-box
	padding 30px 40px
	width 275px
	border-radius 15px
	background white

	&__title {
		margin-bottom 20px
		color $color-shale
		text-align center
		font-size 18px
		line-height 1.4
	}

	&__field {
		display block
		margin-bottom 15px
		width 100%
	}

	&__button {
		margin-top 5px
	}
}

.swiper {
	&-container {
		overflow hidden
		margin-bottom 50px
		border-radius 25px
		box-shadow 5px 10px 30px rgba(13, 40, 58, .15)
	}

	&-prev,
	&-next {
		position absolute
		top 50%
		z-index 5
		margin-top -20px
		width 40px
		height 40px
		border none
		border-radius 50%
		background white
		box-shadow 3px 5px 15px rgba(0, 0, 0, .15)
	}

	&-prev {
		left -20px
	}

	&-next {
		right -20px
	}

	&-pagination {
		bottom -42px
		width 100%
	}

	&-pagination-bullet {
		margin 5px
		width 15px
		height 15px
		border 1px solid transparent
		background white
		background-clip padding-box
		box-shadow inset 0 1px 1px rgba(0, 0, 0, .15)
		opacity 1
	}

	&-pagination-bullet-active,
	&-pagination-bullet:hover {
		border 1px solid $color-azure
		background $color-azure
	}
}

.vue-slider-component.vue-slider-horizontal .vue-slider {

	&-dot {
		box-sizing border-box
		border 4px solid white
		background linear-gradient(180deg, rgba(255, 255, 255, .33) 0, rgba(255, 255, 255, 0) 100%) $color-azure
	}

	&-process {
		background linear-gradient(180deg, rgba(255, 255, 255, .33) 0, rgba(255, 255, 255, 0) 100%) $color-azure
	}

	&-slider {


	}

	&-tooltip {
		padding 5px
		width 120px
		border-color white
		border-radius 5px
		background white
		box-shadow 3px 5px 15px rgba(0, 0, 0, .2)
		color $color-gray-brown
		font-weight 500
		font-size 12px
		font-family Roboto, sans-serif
	}
}

.checkbox,
.radio {
	display flex
	align-items center
	margin 5px 0

	&__field {
		margin-right 20px
	}

	&__label {
		font-size 16px
		font-family Roboto, sans-serif
	}
}

input[type="checkbox"],
input[type="radio"] {
	position relative
	width 25px
	height 25px
	border 1px solid #E2E2E2
	box-shadow 3px 5px 15px rgba(0, 0, 0, 0.1)
	margin-right 15px
	appearance none
}

input[type="checkbox"]:checked::before,
input[type="radio"]:checked::before {
	content ""
	position absolute
	top 0
	left 0
	width 100%
	height 100%
}

input[type="radio"] {
	border-radius 50%
	overflow hidden
}

input[type="radio"]:checked::before {
	box-sizing border-box
	border 6px solid transparent
	border-radius 50%
	background linear-gradient(180deg, rgba(255, 255, 255, 0.33) 0%, rgba(255, 255, 255, 0) 100%) $color-azure padding-box
	border 1
}

input[type="checkbox"] {
	border-radius 5px
}

input[type="checkbox"]:checked {
	&::before {
		background url(../images/icons/checkbox.svg) center center / 12px 8px no-repeat
	}
}

.menu-button {
	box-sizing border-box
	padding 8px
	border none
	border-radius 3px
	background $color-azure
	cursor pointer
	transition .3s

	.bar {
		position relative
		display block
		margin 5px auto
		width 30px
		height 4px
		border-radius 5px
		background-color white
		transition .3s
		transform-origin center center

		&:nth-of-type(1) {
			margin-top 0
		}

		&:nth-of-type(3) {
			margin-bottom 0
		}
	}

	&:hover .bar {
		&:nth-of-type(1) {
			transform translateY(1px) rotate(-4.5deg)
		}

		&:nth-of-type(2) {
			opacity .9
		}

		&:nth-of-type(3) {
			transform translateY(-1px) rotate(4.5deg)
		}
	}

	&.cross .bar {
		&:nth-of-type(1) {
			transform translateY(10px) rotate(-45deg)
		}

		&:nth-of-type(2) {
			opacity 0
		}

		&:nth-of-type(3) {
			transform translateY(-10px) rotate(45deg)
		}
	}

	&.cross:hover .bar {
		&:nth-of-type(1) {
			transform translateY(9px) rotate(-40.5deg)
		}
		&:nth-of-type(2) {
			opacity .1
		}
		&:nth-of-type(3) {
			transform translateY(-9px) rotate(40.5deg)
		}
	}
}

.select {
	appearance none
	padding-right 42px
	background white url(../images/icons/select.svg) right center no-repeat
}

.attach {
	display flex
	align-items center
	padding 5px 15px
	font-size 12px
	font-family Roboto, sans-serif
	user-select none
	cursor default

	&__button {
		padding 5px 40px
		border-radius 3px
		background linear-gradient(360deg, rgba(189, 189, 189, .33) 0, rgba(224, 224, 224, .33) 100%), $color-smoke-white-2
		box-shadow 1px 3px 9px rgba(0, 0, 0, .05)
		cursor pointer

		&:hover {
			background linear-gradient(360deg, rgba(189, 189, 189, .53) 0, rgba(224, 224, 224, .53) 100%), $color-smoke-white-2
		}
	}

	&__name {
		flex auto
		overflow hidden
		margin 0 10px
		text-overflow ellipsis
		white-space nowrap
	}

	&__input {
		display none
	}
}
